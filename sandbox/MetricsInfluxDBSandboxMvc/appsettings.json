{
  "AppMetrics": {
    "DefaultContextLabel": "App.Metrics.InfluxDB.Sandbox",
    "DefaultSamplingType": "ExponentiallyDecaying",
    "MetricsEnabled": true,
    "ReportingEnabled": true,
    "GlobalTags": { "env": "stage" },
    "ApdexTSeconds": 0.1
  },
  "MetricsTrackingMiddlewareOptions": {
    "IgnoredHttpStatusCodes": [ 404 ],
    "OAuth2TrackingEnabled": false
  },
  "MetricsEndpointsOptions": {
    "HealthEndpoint": "/health",
    "MetricsEndpoint": "/metrics",
    "MetricsTextEndpoint": "/metrics-text",
    "PingEndpoint": "/ping",
    "EnvironmentInfoEndpoint": "/env"    
  },
  "MetricsReportingInfluxDBOptions": {
    "InfluxDB": {
      "BaseUri": "http://127.0.0.1:8086",
      "Database": "appmetricssandbox"
    },
    "ReportInterval": "0:0:2"
  },
  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning"
    }
  }
}
