<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\..\build\common.props" />

  <PropertyGroup>
    <Description>App Metrics Middleware Response Formatter. Allows metrics data to be formatted in InfluxDB formats e.g. Line Protocol</Description>
    <AssemblyTitle>App.Metrics.Formatters.InfluxDB</AssemblyTitle>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <PackageTags>appmetrics;influxdb</PackageTags>
    <!--Required for OpenCover-->
    <DebugType>full</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\App.Metrics.Formatting.InfluxDB\App.Metrics.Formatting.InfluxDB.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="App.Metrics.Middleware.Abstractions" Version="$(AppMetricsMiddlewareVersion)" />
  </ItemGroup>

</Project>
